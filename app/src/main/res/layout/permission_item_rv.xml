<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/exit_date_and_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/groups_tv"
        app:layout_constraintTop_toBottomOf="@+id/students_names_tv"
        tools:ignore="TextSizeCheck"
        tools:text="12:55" />

    <TextView
        android:id="@+id/students_names_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="9pt"
        app:layout_constraintStart_toEndOf="@+id/confirmed_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck"
        tools:text="Alexey Ivanov" />

    <ImageView
        android:id="@+id/confirmed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector"
        />

    <TextView
        android:id="@+id/groups_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="4i"
        android:textSize="7pt"
        app:layout_constraintStart_toStartOf="@+id/students_names_tv"
        app:layout_constraintTop_toBottomOf="@+id/students_names_tv"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/going_to_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Going to"
        android:layout_marginEnd="15dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>